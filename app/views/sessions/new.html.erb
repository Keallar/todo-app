<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-12 col-md-8 col-lg-6 col-xl-5">
    <div class="card bg-dark text-white" style="border-radius: 1rem;">
      <div class="card-body">
        <div class="mb-md-5 mt-md-4 pb-5">
          <h2 class="bold mb-2 text-uppercase">Login</h2>
          <p class="text-white-50 mb-5">Please enter your login and password!</p>

          <%= form_tag sessions_path, remote: true do %>
            <div class="form-outline form-white mb-4">
              <%= text_field_tag :username, nil, placeholder: "Username", class: 'form-control form-control', id: 'typeEmailX' %>
            </div>

            <div class="form-outline form-white mb-4">
              <%= password_field_tag :password, nil, placeholder: "Password", class: 'form-control form-control', id: 'typePasswordX' %>
            </div>
            <%= submit_tag "Log In", class: 'btn btn-outline-light btn px-5' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
